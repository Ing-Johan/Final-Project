                     <font>
                        <Font name="Arial Black" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                     <VBox.margin>
                        <Insets bottom="15.0" left="10.0" right="10.0" />
