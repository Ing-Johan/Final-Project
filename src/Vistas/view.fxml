                              <Image url="@../images/logo.png" />
                           </image>
                           <VBox.margin>
                              <Insets top="8.0" />
                           </VBox.margin>
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                        </ImageView>
                     </children>
                     <VBox.margin>
                        <Insets top="18.0" />
